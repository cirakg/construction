<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="false"/>

    <!--
        Added the entity ConstructionSiteWork.
    -->
    <changeSet id="20200426171519-1" author="marko">
        <createTable tableName="construction_site_work">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_created" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <dropDefaultValue tableName="construction_site_work" columnName="date_created" columnDataType="datetime"/>
        
    </changeSet>

    <changeSet id="20200426171519-1-2" author="marko">
		<createTable tableName="construction_site_work_join">
            <column name="construction_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="work_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="construction_id, work_id" tableName="construction_site_work_join"/>
    </changeSet>

    <changeSet id="20200426171519-1-data" author="marko" context="faker">
        <loadData
                  file="config/liquibase/fake-data/construction_site_work.csv"
                  separator=";"
                  tableName="construction_site_work">
            <column name="id" type="numeric"/>
            <column name="date_created" type="datetime"/>
            <column name="status" type="string"/>
        </loadData>
    </changeSet>

</databaseChangeLog>
